      <div class="container">
        <div class="row">
      
          <div class="col-md-3">
          <%= render 'users/info', user: @user %>
          </div>
      
      <div class="col-md-8 offset-md-1">
         <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            </table>
            
             <% @books.each do |book| %>
              <div>
                <table class="table">
                  <thead>
                    <tbody>
                      <tr>
                        <td>
                          <%= link_to user_path(book.user.id) do %>
                          <%= image_tag book.user.get_profile_image(100,100) %>
                          <% end %></td>
                        <td><%= link_to book.title, "/books/#{book.id}" %></td>
                        <td><%= book.body %></td>
                      </tr>
                    </div>
                   </tbody>
                  </thead>
                </table>
              <% end %>
            
      </div>
        </div>
        </div>